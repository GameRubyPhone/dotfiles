#!/usr/bin/env ruby
# Help to explain how to use command

if ARGV[0].nil?
  puts "docker kitchen mysql tmux vim"
  return nil
end

du = <<-du

  du -sh path:  显示指定目录的size
  du -sh *:     显示1层的子目录size
  df -h:        显示当前目录和子目录所有的大小
du

kitchen = <<-kitchen

  kitchen 是和chef绑定的，用来做cookbook的test。

  kitchen list:                                    显示所有的kitchen的VM，独立跑cookbook用的。

  kitchen create/destroy instance_name:            创建或者删除instance，就是VM

  kitchen converge/verify instance_name:           按cookbook安装所有东西，最后测试一下。
    1 如果没有参数就跑所有的integration test case
    2 converge包含create

  kitchen login instance_name:                     ssh 登录VM来inspect
kitchen

# mydql
mysql = <<-mysql
  SHOW ENGINES, PLUGINS, DATABASES, TABLES: 显示相关信息
  CREATE DATABASE db; UES DATABASE: 新建和使用DB 
  SELECT ...\G:                     方便查看，行显示结果;
mysql

# tmux
tmux = <<-tmux
  pre + $:         更改当前的session name
  pre + L:         切换到上个session
  pre + l:         切换到上个window
  pre + ;:         切换到上个pane
  pre + ctrl + o:  rotate panes
  pre + j:         找pane加入当前window
  pre + space:     改变当前layout
  pre + w:         选择window
  pre + &:         kill当前window
  pre + ?:         查询快捷键
tmux

# editors
vim = <<-vim
  n ,a,,:  按照，对齐，可以=/:
  n =:     整理indentation
  e nmap:  显示所有mapping
vim

to_print = 'nothing to print'

case ARGV[0]
when 'd', 'du', 'df'
  to_print = du
when 'k', 'kitchen'
  to_print = kitchen
when 'm', 'mysql'
  to_print = mysql
when 't', 'tmux'
  to_print = tmux
when 'v', 'vim'
  to_print = vim
else 
  to_print = '没有这个命令'
end

puts to_print
